{{#showEditButtons}}
<a href="{{edit_url}}"
   class="btn btn-primary btn-sm"
   title="{{#str}}edit, local_organization{{/str}}"><i class="fa fa-pencil"></i></a>
<button type="button"
        class="btn btn-danger btn-sm btn-local-organization-delete-campus"
        title="{{#str}}delete, local_organization{{/str}}"
        data-id="{{id}}"
        data-name="{{name}}"><i class="fa fa-trash"></i></button>
{{/showEditButtons}}
<a href="{{config.wwwroot}}/local/organization/units.php?campus_id={{id}}"
   class="btn btn-primary btn-sm"
   title="{{#str}}units, local_organization{{/str}}"><i class="fa fa-sitemap"></i> <span class="badge badge-light">{{unit_count}}</span></a>